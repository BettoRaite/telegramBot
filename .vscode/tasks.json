{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Node.js Server",
      "type": "shell",
      "command": "node",
      "args": ["index.js"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start ngrok",
      "type": "shell",
      "command": "ngrok",
      "args": ["http", "5000"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start server",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOrder": "parallel",
      "dependsOn": ["Start Node.js Server", "Start ngrok"]
    }
  ]
}
